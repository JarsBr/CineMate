<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/rounded_background">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/movieImage"
        android:layout_width="220dp"
        android:layout_height="300dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearance="@style/RoundedCornersImage" />

    <ImageView
        android:id="@+id/movieFavorite"
        android:layout_width="35dp"
        android:layout_height="26dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_background_text"
        android:drawable="@drawable/ic_favorite_lesser"
        android:drawablePadding="4dp"
        android:padding="5dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/movieImage"
        app:layout_constraintEnd_toEndOf="@+id/movieImage"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="@+id/movieImage" />

</androidx.constraintlayout.widget.ConstraintLayout>
