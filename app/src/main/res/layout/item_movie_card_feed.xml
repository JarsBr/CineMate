<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/rounded_background">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/movieImage"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearance="@style/RoundedCornersImage" />

    <TextView
        android:id="@+id/movieRating"
        android:layout_width="67dp"
        android:layout_height="26dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_background_text"
        android:drawableLeft="@drawable/ic_star"
        android:drawablePadding="4dp"
        android:padding="5dp"
        android:textColor="#FFD700"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/movieImage"
        app:layout_constraintEnd_toEndOf="@+id/movieImage"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toStartOf="@+id/movieImage" />

    <ImageView
        android:id="@+id/movieFavorite"
        android:layout_width="35dp"
        android:layout_height="26dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_background_text"
        android:drawable="@drawable/ic_favorite_lesser"
        android:drawablePadding="4dp"
        android:padding="5dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/movieImage"
        app:layout_constraintEnd_toEndOf="@+id/movieImage"
        app:layout_constraintHorizontal_bias="0.836"
        app:layout_constraintStart_toStartOf="@+id/movieImage" />

    <TextView
        android:id="@+id/movieTitle"
        android:layout_width="145dp"
        android:layout_height="25dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/rounded_background_text"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:text="Teste"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/movieRating"
        app:layout_constraintEnd_toEndOf="@+id/movieImage"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/movieImage" />

</androidx.constraintlayout.widget.ConstraintLayout>
