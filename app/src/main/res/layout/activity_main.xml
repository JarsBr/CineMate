<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090F13">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#090F13"
        android:padding="16dp">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="32dp"
            android:contentDescription="Logo Cinemate"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toTopOf="@+id/descricaoCima"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.282" />

        <TextView
            android:id="@+id/descricaoBaixo"
            android:layout_width="286dp"
            android:layout_height="66dp"
            android:layout_marginBottom="44dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="left"
            android:text="Compartilharem suas experiÃªncias com filmes!"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/btnLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/descricaoCima"
            android:layout_width="282dp"
            android:layout_height="23dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif"
            android:gravity="left"
            android:text="Para todos os Amantes de Cinema"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/descricaoBaixo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="parent" />


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="211dp"
            android:layout_height="56dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#FF0000"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="12dp"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/btnCadastro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnCadastro"
            android:layout_width="209dp"
            android:layout_height="54dp"
            android:layout_marginBottom="76dp"
            android:backgroundTint="#FF0000"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="12dp"
            android:text="Cadastre-se"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>
