<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090F13"
    tools:context="com.cinemate.app.ui.fragments.admin.AdicionarFilmeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/generoRecyclerView"
            android:layout_width="250dp"
            android:layout_height="570dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_generos_ondeassistir"
            android:padding="0dp"
            app:layout_constraintBottom_toTopOf="@+id/duracaoLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.471"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:listitem="@layout/item_checkbox" />

        <Button
            android:id="@+id/btnVerReviews"
            android:layout_width="229dp"
            android:layout_height="52dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FFFFFF"
            android:padding="12dp"
            android:text="Ver reviews"
            android:textColor="#FF0000"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/btnAdicionarFilme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/reviewsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Lista de Reviews:"
            android:textColor="#FF0000"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/btnVerReviews"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.274"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/btnUpload"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/btn_ripple_effect"
            android:contentDescription="Botão de adicionar imagem"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_upload"
            app:layout_constraintBottom_toTopOf="@+id/reviewsLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <Button
            android:id="@+id/btnAdicionarFilme"
            android:layout_width="229dp"
            android:layout_height="52dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#FF0000"
            android:padding="12dp"
            android:text="Adicionar Filme"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/imagemLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Imagem do Filme:"
            android:textColor="#FF0000"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/btnUpload"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.29"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/elencoInput"
            android:layout_width="262dp"
            android:layout_height="46dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#E0E0E0"
            android:hint="Digite o elenco do filme"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#A0A0A0"
            app:layout_constraintBottom_toTopOf="@+id/ondeAssistirLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.474"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/elencoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Atores principais:"
            android:textColor="#FF0000"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/elencoInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.253"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/sinopseInput"
            android:layout_width="262dp"
            android:layout_height="46dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#E0E0E0"
            android:hint="Digite a sinopse do filme"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#A0A0A0"
            app:layout_constraintBottom_toTopOf="@+id/elencoLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/sinopseLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Sinopse:"
            android:textColor="#FF0000"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/sinopseInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.214"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/faixaEtariaInput"
            android:layout_width="262dp"
            android:layout_height="46dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#E0E0E0"
            android:hint="Digite a faixa etária do filme"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#A0A0A0"
            app:layout_constraintBottom_toTopOf="@+id/sinopseLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.474"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/faixaEtariaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Faixa Etária:"
            android:textColor="#FF0000"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/faixaEtariaInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.225"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/anoInput"
            android:layout_width="262dp"
            android:layout_height="46dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#E0E0E0"
            android:hint="Digite o ano do filme"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#A0A0A0"
            app:layout_constraintBottom_toTopOf="@+id/faixaEtariaLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.474"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/anoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Ano:"
            android:textColor="#FF0000"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/anoInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.21"
            app:layout_constraintStart_toStartOf="parent" />


        <EditText
            android:id="@+id/duracaoInput"
            android:layout_width="262dp"
            android:layout_height="46dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#E0E0E0"
            android:hint="Digite a duração do filme"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#A0A0A0"
            app:layout_constraintBottom_toTopOf="@+id/anoLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.474"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/duracaoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Duração:"
            android:textColor="#FF0000"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/duracaoInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.21"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/generoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Gênero:"
            android:textColor="#FF0000"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/generoRecyclerView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.211"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tituloLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Título:"
            android:textColor="#EF0000"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tituloInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.205"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/tituloInput"
            android:layout_width="262dp"
            android:layout_height="46dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#E0E0E0"
            android:hint="Digite o título do filme"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#A0A0A0"
            app:layout_constraintBottom_toTopOf="@+id/generoLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.448"
            app:layout_constraintStart_toStartOf="parent" />


        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="187dp"
            android:layout_height="65dp"
            android:layout_marginTop="40dp"
            android:contentDescription="Logo Cinemate"
            android:src="@drawable/logo_stretched"
            app:layout_constraintBottom_toTopOf="@+id/filmesLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/filmesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Cadastro Filme"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/tituloLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ondeAssistirRecyclerView"
            android:layout_width="250dp"
            android:layout_height="620dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_generos_ondeassistir"
            android:padding="0dp"
            app:layout_constraintBottom_toTopOf="@+id/imagemLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:listitem="@layout/item_checkbox" />

        <TextView
            android:id="@+id/ondeAssistirLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Onde Assistir:"
            android:textColor="#FF0000"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/ondeAssistirRecyclerView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.234"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
