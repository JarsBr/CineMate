<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.cinemate.app.ui.fragments.main.RespostasReviewFragment">

    <!-- Exibição da review -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvRespostasEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nenhuma resposta encontrada."
            android:visibility="gone"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvReviewComentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comentário da review"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvReviewNota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nota da review"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tvReviewUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuário da review"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

    <!-- RecyclerView para respostas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRespostas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"/>

    <!-- Botão para adicionar resposta -->
    <Button
        android:id="@+id/buttonAddResposta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar Resposta"
        android:layout_margin="16dp"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"/>
</LinearLayout>
